<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="yodoo_apps_database.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='yodoo_apps_settings']" position="inside">
                <h2>Yodoo Apps Sale Configuration</h2>
                <div class="row mt16 o_settings_container" name="yodoo_apps_assembly_settings">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="yodoo_default_product_category_id" string="Default Product Category" class="o_light_label"/>
                            <field name="yodoo_default_product_category_id"/>
                            <div class="text-muted">
                                Default product category for products generated based on addons.
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>

